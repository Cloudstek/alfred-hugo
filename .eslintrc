{
  "parser": "babel-eslint",
  "extends": [
    "xo",
    "plugin:ava/recommended"
  ],
  "env": {
    "node": true,
    "browser": false
  },
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "flowtype-errors/show-errors": 2
  },
  "plugins": [
    "flowtype-errors",
    "ava"
  ]
}
